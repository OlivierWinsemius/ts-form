{
  "include": ["src"],
  "exclude": ["dist", "build"],
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  }
}
